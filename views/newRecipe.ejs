<div class="recipes-home-body inner-page">
<div class="container">
<div class="row">
<div class="col-md-8 col-lg-9">
    <div class="recipe-set submit-recipe-set">
        <h2>Submit Recipe</h2>
        <p>Submit your recipe here! Put all relevant information in their corresponding text boxes. You must be logged in to do this. </p>

        <div class="submit-recipe-form">
            <form action="./addNewRecipe"  method="post" enctype="multipart/form-data">
                <label for="title">Recipe Title</label>
                <input type="text" name="title" id="title" required />

                <label for="source">Source URL (optional)</label>
                <input type="text" name="source" id="source" placeholder="If you got this recipe from a website, please put the URL here!" />
                
                <label for="shortDes">Short Description</label>
                <textarea class="short-text" name="shortDes" id="shortDes" cols="30" rows="10" required ></textarea>
                <label for="fullDes">Full Description (Optional)</label>
                <textarea name="fullDes" id="fullDes" cols="30" rows="10"></textarea>
                <label for="uploadImage">Upload Images</label>
                <input type="file" name="file" size="100" id="uploadImage" required/>
                <fieldset class="ingredient-set">
                    <label for="ingredients">Ingredients</label>
                    <ul class="list-sortable ingredients-list">
                        <li>
                            <div class="add-fields">
                                <span class="handler-list"><i class="fa fa-arrows"></i></span>
                                <input type="text" name="ingredients" id="ingredients" required />
                                <span class="del-list"><i class="fa fa-trash"></i></span>
                            </div>
                        </li>
                    </ul>
                                         <span class="add-button add-ing">
                                            <i class="fa fa-plus"></i>
                                        </span>
                </fieldset>

                <fieldset class="ingredient-set">
                    <label for="steps">Steps</label>
                    <ul class="list-sortable steps">
                        <li>
                            <div class="add-fields">
                                <span class="handler-list"><i class="fa fa-arrows"></i></span>
                                <textarea class="short-text" name="steps" id="steps" cols="30" rows="10"></textarea>
                                <span class="del-list"><i class="fa fa-trash"></i></span>
                            </div>
                        </li>
                    </ul>
                     <span class="add-button add-step">
                        <i class="fa fa-plus"></i>
                    </span>
                </fieldset>

                
                <div class="row">
                    <div class="col-sm-6">
                        <label for="yield">Yield</label>
                        <input type="text" name="yield" id="yield"/>
                    </div>
                    <div class="col-sm-6">
                        <label for="servings">Servings</label>
                        <input type="text" name="servings" id="servings"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-4">
                        <label for="prepTime">Preparation Time</label>
                        <input type="number" name="prepTime" id="prepTime">
                        <select name="prepTimeMHD" id="prepTimeMHD">
                            <option value="mins">mins</option>
                            <option value="hours">hours</option>
                            <option value="days">days</option>
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label for="cookTime">Cook Time</label>
                        <input type="number" name="cookTime" id="cookTime">
                        <select name="cookTimeMHD" id="cookTimeMHD">
                            <option value="mins">mins</option>
                            <option value="hours">hours</option>
                            <option value="days">days</option>
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label for="totalTime">Total Time</label>
                        <input type="text" name="totalTime" id="totalTime"/>
                        <select name="totalTimeMHD" id="totalTimeMHD">
                            <option value="mins">mins</option>
                            <option value="hours">hours</option>
                            <option value="days">days</option>
                        </select>
                    </div>
                </div>


                
                <fieldset class="ingredient-set">
                    <label for="tips">Tips</label>
                    <ul class="list-sortable tips">
                        <li>
                            <div class="add-fields">
                                <span class="handler-list"><i class="fa fa-arrows"></i></span>
                                <textarea class="short-text" name="tips" id="tips" cols="30" rows="10"></textarea>
                                <span class="del-list"><i class="fa fa-trash"></i></span>
                            </div>
                        </li>
                    </ul>
                     <span class="add-button add-tip">
                        <i class="fa fa-plus"></i>
                    </span>
                </fieldset>

                

                
                <div class="text-center">
                    <button type="submit" class="recipe-submit-btn">Submit Your Recipe</button>
                </div>
            </form>
        </div>
    </div>
