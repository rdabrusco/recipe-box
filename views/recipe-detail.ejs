<!--banner-->
<div class="banner banner-blog">
    <div class="container ">
        <div class="main-heading">
            <h1>Recipe details page</h1>
        </div>

    </div>
</div>

<!--banner ends-->
<div class="recipes-home-body inner-page">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-9 full-width">
                <div class="recipe-set">
                    <div class="wrapper-detail-contents">
                        <div class="single-recipe-detail">
                            <div class="wrapper-recipe-heading">
                                
                                    <h2><%= recipe.title %></h2>
                                    <% if(user) { %>
                                    <section class="buttons-bar">
                                        <% if(user.favorites.includes(String(recipe._id))) { %>
                                        <form action="/recipes/unsaveRecipe/<%= recipe._id%>?_method=PUT" method="POST">
                                            
                                            
                                            <button type="submit" class="fa-solid fa-bookmark btn-fix saved"></button>
                                        </form>

                                            <% } else { %>
                                                <form action="/recipes/saveRecipe/<%= recipe._id%>?_method=PUT" method="POST">
                                                <button type="submit" class="fa-solid fa-bookmark btn-fix "></button>
                                            <% } %>
                                            </form>
                                            <% if(user.id == recipe.userId) { %>
                                            <a href="../editRecipe/<%= recipe._id %>"><i class="fa-solid fa-pen-to-square edit"></i></a>
                                            <form action="../deleteRecipe/<%= recipe._id %>?_method=DELETE" method="POST"><button class=" fa-solid     fa-trash delete btn-fix" onClick="return confirm('Do you want to delete this recipe?')" type="submit"></button></form>
                                            <% } %>
                                    </section>

                                    <% } %>
                                    
                                
            
                            </div>

                            <div class="slider-recipe-detail">
                                <img class="recipe-img" src="<%= recipe.img %>" alt="">
                                <ul class="recipe-specs">
                                    <li><span class="count"><%= recipe.yield %></span><span class="text">Yield</span></li>
                                    <li><span class="count"><%= recipe.servings %></span><span class="text">Servings</span></li>
                                    <li><span class="count"><%= recipe.prepTime %><span><%= recipe.prepTimeMHD %></span></span><span class="text">Prep Time</span></li>
                                    <li><span class="count"><%= recipe.cookTime %><span><%= recipe.cookTimeMHD %></span></span><span class="text">Cook Time</span></li>
                                </ul>
                            </div>
                        </div>


                    <div class="recipe-detail-body">
                    <a href="#" class="print-button"><i class="fa fa-print"></i>Print Recipe</a>


                    <div class="separator-post"></div>
                    <p>
                        <%= recipe.fullDes ? recipe.fullDes : recipe.shortDes %>
                    </p>
                    <br/>
                    <div class="ingredients-checkbox">
                        <div class="ingredients">
                            <h3>Ingredients</h3>
                            <ul>
                                <% for(let i = 0; i < recipe.ingredients.length; i++){ %>
                                <li>
                                    <label>
                                        <input type="checkbox"/>
                                        <%= recipe.ingredients[i] %>
                                    </label>
                                </li>
                                <% } %>

                            </ul>
                        </div>
                    </div>

                    <div class="recipe-steps">
                        <h3 class="lined">Step by Step method</h3>
                        <ul class="steps-list">
                            <li>
                                <% for(let i = 0; i < recipe.directions.length; i++) { %>
                                <div class="step-single">
                                    <div class="step-detail">
                                        <h3>Step <%= i+1 %>.</h3>
                                        <p>
                                            <%= recipe.directions[i] %>
                                        </p>
                                    </div>
                                </div>
                            </li>

                            <% } %>

                        </ul>
                    </div>


                    <% if(recipe.tips[0]) { %>
                        <% console.log(recipe.tips[0]) %>
                    <div class="tips-variations">
                        <h3>Tips & variations</h3>
                        <ul>
                            <% for(let i = 0; i < recipe.tips.length; i++) { %>
                                <li>
                                    <p>
                                        <%= recipe.tips[i] %>
                                    </p>
                                </li>
                            <% }  %>
                            
                        </ul>
                    </div>

                    <% } %>

                    <div class="separator-post"></div>
                    


                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-3">
            <aside>

                <div class="side-bar">
                   
                </div>
            </aside>
        </div>

    </div>
</div>

