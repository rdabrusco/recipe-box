<!--header-->
<header class="header-logo">
    <div class="header header-var1 fade-load-down">
        <div class="responsive-menu"></div>
        <div class="nav-var1">
            <div class="container">
                <div class="row">
                    <div class="col-md-5">

                        <div class="left-nav">
                            <nav class="nav-collapse">
                                <ul class="main-menu left">
                                    <li><a href="/">Home</a>
                                    </li>
                                    <li>
                                        <a href="/recipes/allRecipes">All Recipes</a>
                                    </li>
                                    <li>
                                        <% if(!user){ %>
                                            <a href="#" onClick="alert('Please log in first')">Saved Recipes</a>
                                            <% }else { %>
                                                <a href="/recipes/savedRecipes">Saved Recipes</a>
                                            <% } %>
                                    </li>

                                </ul>
                            </nav>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="logo-wrapper">
                            <a href="#"><img class="hide-sm"src="../../images/default1.png" alt="logo"/></a>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="right-nav">
                            <div class="wrapper-links">

                    <span class="sign-in-buttons">
                        <% if(!user){ %>
                        <a class="login" href="/login">Login</a>
                        <a class="register" href="/signup">Register</a>
                        <% } else { %>
                            <p class="login" >Hello, <%= user.userName %></p>
                        <a class="register" href="/logout">Logout</a>
                        <% } %>
                    </span>
                            </div>
                            <nav class="nav-collapse">
                                <ul class="main-menu right">
                                    <li>
                                        <% if(!user){ %>
                                        <a href="#" onClick="alert('Please log in first')">My Recipes</a>
                                        <% }else { %>
                                            <a href="/recipes/myRecipes">My Recipes</a>
                                        <% } %>
                                    </li>
                                    <li>
                                        <a href="#">My Account</a>
                                        <ul>
                                            <li><a href="#">Coming soon!</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <% if(!user){ %>
                                            <a class="submit-recipe" href="#"  onClick="alert('Please log in first')">Submit recipe</a>
                                            <% }else { %>
                                                <a class="submit-recipe" href="recipes/newRecipe">Submit recipe</a>
                                            <% } %>
                                        
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</header>
<!--header ends-->

<!--banner-->
<div class="banner banner-blog">
    <div class="container ">
        <div class="main-heading">
            <h1>Recipe listing page</h1>
        </div>

    </div>
</div>


<!--banner ends-->
<div class="recipes-home-body inner-page">
<div class="container">
<div class="row">
<div class="col-md-8 col-lg-9">
<div class="recipe-set">
<div class="listing-buttons">
    <span class="grid"><i class="fa fa-th-large"></i></span>
    <span class="list current "><i class="fa fa-bars"></i></span>
</div>
<h2>Recipes</h2>

<div class="recipe-listing listing-list">

<% recipes.forEach(el => { %>
    
<div class="listing">
    <div class="image">
        <a href="/recipes/allRecipes/<%= el._id %>">
            <img src="<%= el.img %>" alt="image"/>
        </a>
    </div>
    <div class="detail">
        <h4><a href="/recipes/allRecipes/<%= el._id %>"><%= el.title %></a></h4>
        <p>
            <%= el.shortDes %>
        </p>
        <div class="meta-listing">
            <ul class="post-meta">
                <li class="author"><a href="#"><%= el.userName %></a></li>
                <li class="calendar"><%= el.createdAt.toLocaleDateString() %></li>
            </ul>          
        </div>
    </div>
</div>

<% }) %>





</div>
</div>
</div>

</div>

</div>
</div>

<!--footer-->
<div class="footer footer-variant-one footer-fluid">
    <div class="container">
        <div class="footer-inner">
            
            <div class="footer-copyright text-center">
                <p>&copy; Copyright 2022 All Rights Reserved by <a href="https://ryandabrusco.netlify.app/">Ryan DaBrusco</a></p>
            </div>
        </div>
    </div>
</div>
<!--footer ends-->

<script src="/js/jquery-1.11.3.min.js"></script>
<script src="/js/jquery-ui.js"></script>
<script src="/js/slick.min.js"></script>
<script src="/js/jquery.meanmenu.js"></script>
<script src="/js/jquery.selectric.min.js"></script>
<script src="/js/wow.js"></script>
<script src="/js/jquery.form.js"></script>
<script src="/js/jquery.validate.min.js"></script>
<script src="/js/jquery.swipebox.js"></script>
<script src="/js/custom.js"></script>

</body>
</html>